public class Entier {
    // Attribut encapsulé
    private int val;

    // Setter pour l'attribut val
    public void setVal(int val) {
        this.val = val;
    }

    // Getter pour l'attribut val
    public int getVal() {
        return val;
    }
}

####

public class TestPassage {
    public static void main(String[] args) {
        // Initialisation des valeurs à 10
        int i = 10;
        Entier e = new Entier();
        e.setVal(10);
        int[] t = {10, 10};

        // Affichage initial
        System.out.println("Avant modification:");
        System.out.println("i = " + i);
        System.out.println("e = " + e.getVal());
        System.out.println("t[0] = " + t[0]);

